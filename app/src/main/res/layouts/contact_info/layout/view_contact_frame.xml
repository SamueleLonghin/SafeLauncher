<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_contact_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_view_contact"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/default_text_view_contact"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_view_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/default_text_view_contact"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_view_contact" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/call_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_view_contact">

        <ImageView
            android:id="@+id/image_rapid_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="#954444"
            android:contentDescription="@string/call_button"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/button_rapid_call"
            app:layout_constraintEnd_toStartOf="@+id/button_rapid_call"
            app:layout_constraintTop_toTopOf="@+id/button_rapid_call"
            app:srcCompat="@android:drawable/stat_sys_phone_call" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_rapid_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_button"
            android:textSize="@dimen/call_button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_rapid_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_whatsapp_open_chat"
            android:textSize="@dimen/call_button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_rapid_call" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/list_view_notification"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:minHeight="100dp"
        app:layout_constraintBottom_toTopOf="@+id/back_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_layout" />

