<resources>
    <!-- Base application theme. -->
    <style name="Theme.SafeLauncher" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/md_theme_dark_primary</item>-->
        <!--        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>-->
        <!--        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>-->

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.SafeLauncher.Dialog" parent="Theme.Material3.DynamicColors.DayNight" />

    <style name="Theme.SafeLauncher.NoTitle" parent="Theme.SafeLauncher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SafeLauncher.NoTitle.Fullscreen" parent="Theme.SafeLauncher.NoTitle">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.SafeLauncher.NoTitle.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SafeLauncher.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>